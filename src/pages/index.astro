    <!-- JavaScript -->
    <script>
        // ==========================================
        // CONSTANTES FISCALES 2026 (QU√âBEC/CANADA)
        // Indexation de +4.5% appliqu√©e sur les valeurs 2024
        // ==========================================
        
        const FISCAL_2026 = {
            // Exemptions de base
            exemptionBaseFederale: 16129, // 15439 * 1.045
            exemptionBaseProvinciale: 18056, // 17283 * 1.045
            
            // RRQ (R√©gime de rentes du Qu√©bec)
            rrq: {
                taux: 0.064, // 6.4%
                maxGainsAdmissibles: 70300, // Estimation 2026
                exemption: 3500
            },
            
            // AE (Assurance-emploi)
            ae: {
                taux: 0.0132, // 1.32%
                maxGainsAssurables: 65700 // Estimation 2026
            },
            
            // RQAP (R√©gime qu√©b√©cois d'assurance parentale)
            rqap: {
                taux: 0.00494 // 0.494%
            },
            
            // Tranches d'imposition f√©d√©rale 2026 (index√©es +4.5%)
            tranchesFederales: [
                { min: 0, max: 55867, taux: 0.15 },        // 53359 * 1.045
                { min: 55867, max: 111733, taux: 0.205 },  // 106717 * 1.045
                { min: 111733, max: 173205, taux: 0.26 },  // 165430 * 1.045
                { min: 173205, max: 246752, taux: 0.29 },  // 235675 * 1.045
                { min: 246752, max: Infinity, taux: 0.33 }
            ],
            
            // Tranches d'imposition provinciale Qu√©bec 2026 (index√©es +4.5%)
            tranchesProvinciales: [
                { min: 0, max: 51780, taux: 0.14 },        // 49275 * 1.045
                { min: 51780, max: 103545, taux: 0.19 },   // 98540 * 1.045
                { min: 103545, max: 126000, taux: 0.24 },  // 120095 * 1.045
                { min: 126000, max: Infinity, taux: 0.2575 }
            ]
        };

        // ==========================================
        // VARIABLES GLOBALES
        // ==========================================
        
        let employmentType = 'salarie';
        let currentPeriod = 'annuel';
        let modeRealisteActive = false;
        let debounceTimer = null;
        
        // Variables pour l'animation de compteur
        let currentDisplayedValue = 0;
        let targetValue = 0;
        let animationFrame = null;

        // ==========================================
        // FORMATAGE MON√âTAIRE (CORRECTION BUG)
        // ==========================================
        
        /**
         * Fonction stricte de formatage mon√©taire
         * CRITIQUE: Retourne uniquement une string format√©e, jamais de concat√©nation
         */
        function formatMoney(valeur) {
            if (valeur === null || valeur === undefined || isNaN(valeur)) {
                return '$0';
            }
            
            const montant = Math.round(valeur);
            const signe = montant < 0 ? '-' : '';
            const valeurAbs = Math.abs(montant);
            
            // Format canadien avec espaces
            const formatted = valeurAbs.toLocaleString('fr-CA', {
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            });
            
            return `${signe}${formatted} $`;
        }

        /**
         * Met √† jour un √©l√©ment avec un montant format√©
         * CRITIQUE: Utilise innerText pour remplacer compl√®tement le contenu
         */
        function updateMontant(elementId, valeur) {
            const element = document.getElementById(elementId);
            if (element) {
                // Nettoie compl√®tement l'√©l√©ment
                element.innerText = formatMoney(valeur);
            }
        }

        /**
         * Animation de compteur "counting up" pour le hero number
         */
        function animateValue(elementId, start, end, duration = 800) {
            const element = document.getElementById(elementId);
            if (!element) return;
            
            const startTime = performance.now();
            const range = end - start;
            
            function updateValue(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Easing function (ease-out)
                const easeOut = 1 - Math.pow(1 - progress, 3);
                const current = start + (range * easeOut);
                
                element.innerText = formatMoney(current);
                
                if (progress < 1) {
                    animationFrame = requestAnimationFrame(updateValue);
                } else {
                    element.innerText = formatMoney(end);
                }
            }
            
            if (animationFrame) {
                cancelAnimationFrame(animationFrame);
            }
            
            requestAnimationFrame(updateValue);
        }

        // ==========================================
        // UTILITAIRES
        // ==========================================
        
        function convertirSelonPeriode(montantAnnuel) {
            switch(currentPeriod) {
                case 'mensuel':
                    return montantAnnuel / 12;
                case 'bihebdo':
                    return montantAnnuel / 26;
                case 'hebdo':
                    return montantAnnuel / 52;
                default:
                    return montantAnnuel;
            }
        }

        function getPeriodLabel() {
            const labels = {
                'annuel': 'par ann√©e',
                'mensuel': 'par mois',
                'bihebdo': 'aux 2 semaines',
                'hebdo': 'par semaine'
            };
            return labels[currentPeriod] || 'par ann√©e';
        }

        // ==========================================
        // CALCULS FISCAUX
        // ==========================================
        
        function calculerImpotProgressif(revenuImposable, tranches) {
            let impot = 0;
            
            for (const tranche of tranches) {
                if (revenuImposable > tranche.min) {
                    const montantDansTranche = Math.min(
                        revenuImposable - tranche.min,
                        tranche.max - tranche.min
                    );
                    impot += montantDansTranche * tranche.taux;
                }
            }
            
            return impot;
        }

        function calculerRRQ(salaireBrut) {
            if (employmentType === 'freelance') return 0;
            
            const gainsAdmissibles = Math.min(
                Math.max(0, salaireBrut - FISCAL_2026.rrq.exemption),
                FISCAL_2026.rrq.maxGainsAdmissibles - FISCAL_2026.rrq.exemption
            );
            
            return gainsAdmissibles * FISCAL_2026.rrq.taux;
        }

        function calculerAE(salaireBrut) {
            if (employmentType === 'freelance') return 0;
            
            const gainsAssurables = Math.min(salaireBrut, FISCAL_2026.ae.maxGainsAssurables);
            return gainsAssurables * FISCAL_2026.ae.taux;
        }

        function calculerRQAP(salaireBrut) {
            if (employmentType === 'freelance') return 0;
            
            return salaireBrut * FISCAL_2026.rqap.taux;
        }

        // ==========================================
        // CALCUL MODE R√âALISTE (FEATURE VIRALE)
        // ==========================================
        
        function calculerTauxHoraireRealiste(salaireNetAnnuel, salaireBrutAnnuel) {
            if (!modeRealisteActive) return null;
            
            const heuresTransport = parseFloat(document.getElementById('heuresTransport').value) || 0;
            const coutTransport = parseFloat(document.getElementById('coutTransport').value) || 0;
            
            // Heures de travail standard: 40h/semaine * 52 semaines = 2080h/an
            const heuresTravailStandard = 2080;
            
            // Heures de transport annuelles
            const heuresTransportAnnuelles = heuresTransport * 52;
            
            // Heures totales (travail + transport)
            const heuresTotalesReelles = heuresTravailStandard + heuresTransportAnnuelles;
            
            // Co√ªt de transport annuel
            const coutTransportAnnuel = coutTransport * 12;
            
            // Salaire net ajust√© (apr√®s transport)
            const salaireNetAjuste = salaireNetAnnuel - coutTransportAnnuel;
            
            // Taux horaire affich√© (bas√© sur heures standard)
            const tauxHoraireAffiche = salaireBrutAnnuel / heuresTravailStandard;
            
            // Taux horaire r√©el (bas√© sur heures totales + co√ªts)
            const tauxHoraireReel = salaireNetAjuste / heuresTotalesReelles;
            
            return {
                tauxAffiche: tauxHoraireAffiche,
                tauxReel: tauxHoraireReel,
                difference: tauxHoraireAffiche - tauxHoraireReel,
                pourcentagePerte: ((tauxHoraireAffiche - tauxHoraireReel) / tauxHoraireAffiche) * 100
            };
        }

        function afficherResultatRealiste(resultat) {
            const resultDiv = document.getElementById('realisticResult');
            const textElement = document.getElementById('tauxHoraireRealiste');
            
            if (!resultat || !modeRealisteActive) {
                resultDiv.classList.add('hidden');
                return;
            }
            
            resultDiv.classList.remove('hidden');
            
            const tauxAfficheStr = resultat.tauxAffiche.toFixed(2);
            const tauxReelStr = resultat.tauxReel.toFixed(2);
            const perteStr = resultat.pourcentagePerte.toFixed(0);
            
            textElement.innerHTML = `
                Votre taux horaire affich√© est <span class="font-black text-slate-100">${tauxAfficheStr} $/h</span>, 
                mais votre taux <span class="font-black text-orange-400">R√âEL</span> est 
                <span class="font-black text-orange-400">${tauxReelStr} $/h</span>
                <span class="text-xs text-slate-400 block mt-2">(${perteStr}% de perte due au transport)</span>
            `;
        }

        // ==========================================
        // CALCUL PRINCIPAL
        // ==========================================
        
        function calculerSalaireNet() {
            const salaireBrutAnnuel = parseFloat(document.getElementById('salaireBrut').value) || 0;
            
            if (salaireBrutAnnuel <= 0) {
                // Reset tous les affichages
                updateMontant('salaireNet', 0);
                updateMontant('impotFederal', 0);
                updateMontant('impotProvincial', 0);
                updateMontant('rrq', 0);
                updateMontant('ae', 0);
                updateMontant('rqap', 0);
                updateMontant('totalDeductions', 0);
                document.getElementById('tauxEffectif').innerText = '0%';
                updateMontant('montantEpargne', 0);
                updateMontant('montantCashback', 0);
                updateMontant('montantHypotheque', 0);
                document.getElementById('realisticResult').classList.add('hidden');
                return;
            }
            
            // 1. Cotisations sociales
            const rrq = calculerRRQ(salaireBrutAnnuel);
            const ae = calculerAE(salaireBrutAnnuel);
            const rqap = calculerRQAP(salaireBrutAnnuel);
            
            // 2. Revenu imposable
            const revenuImposable = salaireBrutAnnuel - rrq - rqap;
            
            // 3. Imp√¥t f√©d√©ral
            const revenuImposableFederal = Math.max(0, revenuImposable - FISCAL_2026.exemptionBaseFederale);
            const impotFederal = calculerImpotProgressif(revenuImposableFederal, FISCAL_2026.tranchesFederales);
            
            // 4. Imp√¥t provincial
            const revenuImposableProvincial = Math.max(0, revenuImposable - FISCAL_2026.exemptionBaseProvinciale);
            const impotProvincial = calculerImpotProgressif(revenuImposableProvincial, FISCAL_2026.tranchesProvinciales);
            
            // 5. Total d√©ductions
            const totalDeductions = impotFederal + impotProvincial + rrq + ae + rqap;
            
            // 6. Salaire net annuel
            const salaireNetAnnuel = salaireBrutAnnuel - totalDeductions;
            
            // 7. Taux effectif
            const tauxEffectif = salaireBrutAnnuel > 0 
                ? ((totalDeductions / salaireBrutAnnuel) * 100).toFixed(1)
                : 0;
            
            // 8. Conversion selon p√©riode
            const salaireNet = convertirSelonPeriode(salaireNetAnnuel);
            const impotFed = convertirSelonPeriode(impotFederal);
            const impotProv = convertirSelonPeriode(impotProvincial);
            const rrqPeriode = convertirSelonPeriode(rrq);
            const aePeriode = convertirSelonPeriode(ae);
            const rqapPeriode = convertirSelonPeriode(rqap);
            const totalDed = convertirSelonPeriode(totalDeductions);
            
            // 9. Mise √† jour affichage avec animation pour le hero number
            animateValue('salaireNet', currentDisplayedValue, salaireNet, 800);
            currentDisplayedValue = salaireNet;
            
            updateMontant('impotFederal', -impotFed);
            updateMontant('impotProvincial', -impotProv);
            updateMontant('rrq', -rrqPeriode);
            updateMontant('ae', -aePeriode);
            updateMontant('rqap', -rqapPeriode);
            updateMontant('totalDeductions', -totalDed);
            
            document.getElementById('tauxEffectif').innerText = `${tauxEffectif}%`;
            document.getElementById('periodLabel').innerText = getPeriodLabel();
            
            // 10. Opportunit√©s (bas√©es sur salaire net annuel)
            const epargnePotentielle = salaireNetAnnuel * 0.10; // 10%
            const cashbackPotentiel = (salaireNetAnnuel * 0.60) * 0.02; // 2% sur 60% d√©penses
            const capaciteEmprunt = salaireNetAnnuel * 4.5; // 4.5x salaire net
            
            updateMontant('montantEpargne', epargnePotentielle);
            updateMontant('montantCashback', cashbackPotentiel);
            updateMontant('montantHypotheque', capaciteEmprunt);
            
            // 11. Mode R√©aliste
            if (modeRealisteActive) {
                const resultatRealiste = calculerTauxHoraireRealiste(salaireNetAnnuel, salaireBrutAnnuel);
                afficherResultatRealiste(resultatRealiste);
            } else {
                document.getElementById('realisticResult').classList.add('hidden');
            }
        }

        // ==========================================
        // EVENT LISTENERS
        // ==========================================
        
        // Toggle Type d'emploi
        document.getElementById('btnSalarie').addEventListener('click', function() {
            employmentType = 'salarie';
            this.classList.add('toggle-active');
            document.getElementById('btnFreelance').classList.remove('toggle-active');
            
            // Afficher les cotisations
            document.getElementById('rrqRow').style.display = 'flex';
            document.getElementById('aeRow').style.display = 'flex';
            document.getElementById('rqapRow').style.display = 'flex';
            
            calculerSalaireNet();
        });

        document.getElementById('btnFreelance').addEventListener('click', function() {
            employmentType = 'freelance';
            this.classList.add('toggle-active');
            document.getElementById('btnSalarie').classList.remove('toggle-active');
            
            // Masquer les cotisations
            document.getElementById('rrqRow').style.display = 'none';
            document.getElementById('aeRow').style.display = 'none';
            document.getElementById('rqapRow').style.display = 'none';
            
            calculerSalaireNet();
        });

        // Toggle P√©riode
        document.querySelectorAll('.period-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                currentPeriod = this.dataset.period;
                
                document.querySelectorAll('.period-btn').forEach(b => {
                    b.classList.remove('toggle-active');
                    b.classList.add('text-slate-400');
                });
                
                this.classList.add('toggle-active');
                this.classList.remove('text-slate-400');
                
                calculerSalaireNet();
            });
        });

        // Toggle Mode R√©aliste
        document.getElementById('modeRealisteToggle').addEventListener('click', function() {
            modeRealisteActive = !modeRealisteActive;
            
            this.classList.toggle('active');
            
            const inputs = document.getElementById('realisticInputs');
            if (modeRealisteActive) {
                inputs.classList.remove('hidden');
            } else {
                inputs.classList.add('hidden');
            }
            
            calculerSalaireNet();
        });

        // Input Salaire avec debouncing
        document.getElementById('salaireBrut').addEventListener('input', function() {
            if (debounceTimer) {
                clearTimeout(debounceTimer);
            }
            
            debounceTimer = setTimeout(() => {
                calculerSalaireNet();
            }, 300);
        });

        // Inputs Mode R√©aliste avec debouncing
        ['heuresTransport', 'coutTransport'].forEach(inputId => {
            document.getElementById(inputId).addEventListener('input', function() {
                if (debounceTimer) {
                    clearTimeout(debounceTimer);
                }
                
                debounceTimer = setTimeout(() => {
                    if (modeRealisteActive) {
                        calculerSalaireNet();
                    }
                }, 300);
            });
        });

        // ==========================================
        // INITIALISATION
        // ==========================================
        
        document.addEventListener('DOMContentLoaded', function() {
            calculerSalaireNet();
        });
    </script>

